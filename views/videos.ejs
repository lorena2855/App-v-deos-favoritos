<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>App Videos Favoritos</title>
    <%- include ('partials/_header') %>
</head>

<body>

    <!-- HEADER -->
    <%- include ('partials/navigation') %>

        <!-- MAIN CONTENT -->
        <div class="container mt-5">

            <div class="row">

                <%- include ('partials/select') %>
                    <div class="container">
                        <h2>Videos Guardados</h2>

                        <ul id="lista">
                            <li class="video">

                                <% if (data) { %>
                                    <% for(var i = 0; i < data.length; i++) { %>

                                        <div>
                                            <iframe width="347" height="210" src="<%= link[i].description+'?' %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                        </div>
                                        <h3>
                                            <%= data[i].name %>
                                        </h3>
                                        <p>
                                            <%= data[i].category %>
                                        </p>
                                        <div>
                                            
                                            <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                                        </div>
                                        <% } %>
                                            <% } %>
                            </li>

                        </ul>
                    </div>
                    <!------------------------------------->

            </div>
        </div>


        <!-- section one -->
     
<div class="container-fluid" id="about">
            <div class="row bg-dark text-white p-5 text-center">
                <div class="col-sm-6">
                    <i class="fab fa-youtube fa-10x"></i>
                </div>
                <div class="col-sm-6">
                    <h3></h3>
                    <p>
                        <span>
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <!-- FOOTER -->
        <%- include ('partials/_footer')  %>
            <!-- JAVASCRIPT CDNS -->
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>

</html>